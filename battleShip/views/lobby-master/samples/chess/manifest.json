{
  "name": "Lobby Chess",
  "description": "A chess game for Lobby",
  "version": "0.1",
  "manifest_version": 2,

  "icons": {
    "16": "images/chess-16.png",
    "128": "images/chess-128.png"
  },

  "permissions": [
    "experimental",
    "storage",
    {"socket": [
      "tcp-connect",
      "tcp-listen"
    ]}
  ],

  "app": {
    "background": {
      "scripts": ["bin/background.js"],
      "persistent": true
    }
  }
  
}
